<UserControl x:Class="Pizza.MVVM.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.MVVM.CustomControls"
             mc:Ignorable="d" 

             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="passwordTextBox"   
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Roboto"
                         Foreground="White"
                         CaretBrush="Black"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,2"
                         VerticalContentAlignment="Center"
                         Padding="30,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/Pizza;component/Images/Login/Icons/key.png"
                                    Stretch="Uniform"
                                    AlignmentX="Left" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="RelativeToBoundingBox"
                                    />
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
