<Window x:Class="Pizza.MVVM.View.UserChild.NumberInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza.MVVM.View.UserChild"
        mc:Ignorable="d"
        Height="120" Width="200">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите число:" Margin="5,5,5,0"/>
            <TextBox x:Name="NumberTextBox"  Margin="5,5,5,0"/>
            <Button Content="Ок" Click="OkButton_Click" Margin="5,5,5,0"/>
        </StackPanel>
    </Grid>
</Window>
